{
  "mcpServers": {
    "arxiv-search": {
      "command": "/path/to/arxiv-mcp-server/venv/bin/python",
      "args": [
        "-m", 
        "src.server",
        "--stdio"
      ],
      "cwd": "/path/to/arxiv-mcp-server",
      "env": {
        "OPENAI_API_KEY": "your-openai-api-key-here",
        "ARXIV_DOWNLOAD_DIR": "/path/to/downloads",
        "PYTHONPATH": "/path/to/arxiv-mcp-server"
      }
    }
  }
}